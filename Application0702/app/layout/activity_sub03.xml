<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sub03Activity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sub03Activity"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/sub03_button_toMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Main" />

    <Button
        android:id="@+id/sub03_button_toSub01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Sub01" />

    <Button
        android:id="@+id/sub03_button_toSub02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Sub02" />

    <Button
        android:id="@+id/sub03_button_toSub03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Sub03" />
</LinearLayout>